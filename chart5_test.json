   
{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",

"title": {
    "text": "Decomposed Ag",
    "fontSize": 20,
    "subtitle":"Colours represent",
    "subtitleFontStyle":"italic",
    "subtitleFontSize":12,
    "anchor": "start",
    "color": "black"
  },

  "description": "NIC",
  "data": {
    "url": "https://raw.githubusercontent.com/HenryWRobinson/HenryWRobinson.github.io/main/Project/Data/YearlyAggregateNHSnicByCategory.csv",
    "format": {"type": "csv"}
  },
  
  "height": 480,
  
  "width": "container",
  
  "selection": {
    "Category": {
      "type": "single",
      "fields": ["BNFSectionName"],
      "bind": {
        "input": "select",
        "options": [
          null, "Drugs Used In Diabetes"
        ],
        "name": "Options: "
      }
    }
  },
  "transform": [
    {"filter": {"selection": "Category"}}
  ],

  "mark": {"type": "bar"},

  

  "encoding": {
    "x": {
      "field": "year", 
      "type": "nominal", 
      "title": null,
      "axis": {"labelAngle": 90}},
    "y": {
      "field": "NIC",
      "type": "quantitative",
      "title": "NHS Net Ingredient Cost (Â£)",
      "axis": {
        "grid": false
      }
    },
      "color": {
      "field": "BNFSectionName",
      "type": "nominal",
      "legend": null
      },
     
    

      "tooltip": [
        {"field": "BNFSectionName", "type": "nominal", "title": "Category"}
    ]
    }

  
}